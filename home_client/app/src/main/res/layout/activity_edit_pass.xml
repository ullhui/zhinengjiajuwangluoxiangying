<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ffffff"
    android:orientation="vertical">

    <include

        layout="@layout/layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#cccccc" />


    <RelativeLayout
        android:id="@+id/relativelayout_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x94">


        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="输入密码："
            android:textColor="#333333"
            android:textSize="@dimen/x28" />


        <EditText
            android:id="@+id/edit_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x56"
            android:layout_toRightOf="@+id/textview1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:singleLine="true"
            android:textSize="@dimen/x26" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="#cccccc" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativelayout_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x94">


        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="重复密码："
            android:textColor="#333333"
            android:textSize="@dimen/x28" />


        <EditText
            android:id="@+id/edit_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x56"
            android:layout_toRightOf="@+id/textview2"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请再次输入密码"
            android:singleLine="true"
            android:textSize="@dimen/x26" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="#cccccc" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f7f7">



        <Button
            android:id="@+id/button_1"
            android:layout_width="@dimen/x230"
            android:layout_height="@dimen/x70"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x226"
            android:background="@drawable/button_yj2"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="@dimen/x28" />
    </RelativeLayout>


</LinearLayout>