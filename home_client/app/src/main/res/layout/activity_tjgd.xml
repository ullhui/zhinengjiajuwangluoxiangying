<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ffffff"
    android:orientation="vertical">


    <include

        layout="@layout/layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5"
        android:background="#f7f7f7" />

    <!--    举报理由-->
    <RelativeLayout
        android:id="@+id/relativelayout_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x94">


        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="手机号："
            android:textColor="#333333"
            android:textSize="@dimen/x28" />


        <EditText
            android:id="@+id/edit_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x56"
            android:layout_toRightOf="@+id/textview1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:singleLine="true"
            android:textSize="@dimen/x26" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="#f7f7f7" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativelayout_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x94">


        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="邮　箱："
            android:textColor="#333333"
            android:textSize="@dimen/x28" />


        <EditText
            android:id="@+id/edit_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x56"

            android:layout_toRightOf="@+id/textview2"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入您的邮箱"
            android:singleLine="true"
            android:textSize="@dimen/x26" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_alignParentBottom="true"

            android:background="#f7f7f7" />
    </RelativeLayout>


    <!--上传截图-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x39">


        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片："
                android:textColor="#333333"
                android:textSize="@dimen/x28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#cccccc"
                android:textSize="@dimen/x28" />
        </LinearLayout>

        <!--上传截图-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_toRightOf="@+id/line2"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/image1"
                android:layout_width="@dimen/x170"
                android:layout_height="@dimen/x170"
                android:background="@mipmap/xuxianjia"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="@dimen/x170"
                android:layout_height="@dimen/x170"
                android:layout_marginLeft="@dimen/x10"
                android:background="@mipmap/xuxianjia"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="@dimen/x170"
                android:layout_height="@dimen/x170"
                android:layout_marginLeft="@dimen/x10"
                android:background="@mipmap/xuxianjia"
                android:scaleType="fitXY" />

        </LinearLayout>


    </RelativeLayout>

    <!--描述-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x39">


        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="问题描述："
                android:textColor="#333333"
                android:textSize="@dimen/x28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#cccccc"
                android:textSize="@dimen/x28" />
        </LinearLayout>

        <!--上传截图-->
        <EditText
            android:id="@+id/edit_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x230"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginBottom="@dimen/x30"
            android:layout_toRightOf="@+id/line3"
            android:background="@drawable/button_bk_item"
            android:gravity="left"
            android:hint="请输入问题描述..."
            android:orientation="horizontal"
            android:padding="@dimen/x20"
            android:textSize="@dimen/x26" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f7f7">

        <Button
            android:id="@+id/button_1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginBottom="@dimen/x100"
            android:background="@drawable/button_yj2"
            android:text="立即提交"
            android:textColor="#ffffff"
            android:textSize="@dimen/x28" />
    </RelativeLayout>
</LinearLayout>